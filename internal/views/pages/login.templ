package pages

import "homedb/internal/views/components"

templ Login(err error) {
	@components.Layout("Login", false) {
		if err != nil {
			<p>{ err.Error() }</p>
		}
		<form action="/login" method="post">
			@components.FormInput("text", "username", "Nutzername", "", "")
			@components.FormInput("password", "password", "Passwort", "", "")
			<button type="submit">Login</button>
		</form>
	}
}
